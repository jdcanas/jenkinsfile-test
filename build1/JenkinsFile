pipeline {
   agent any


    parameters {
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
    }

    stages {
        stage('Git') {
            steps {
                git url: 'https://github.com/jdcanas/jenkinsfile-test'
            }
        }
        
        stage('Build') {
            steps {
                echo "building ${params.Greeting}"
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
